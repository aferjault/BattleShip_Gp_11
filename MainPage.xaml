<Page
    x:Class="Battleship_project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battleship_project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="1000"
    Height="500"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="Bienvenue Battleship" VerticalAlignment="Top" FontSize="34"/>

        <StackPanel HorizontalAlignment="Center" Margin="0,125,0,0">
            <Button Name ="Play" HorizontalAlignment="Center" Width="200" Click="Play_Click">Play</Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Margin="0,225,0,0">
            <Button Name ="Ranking" HorizontalAlignment="Center" Width="200" Click="Ranking_Click">Ranking</Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Margin="0,325,0,0">
            <Button Name ="Exit" HorizontalAlignment="Center" Width="200"  Click="ClosePopupClicked">Exit</Button>
        </StackPanel>

        <Frame x:Name="frame" ></Frame>
    </Grid>


</Page>
